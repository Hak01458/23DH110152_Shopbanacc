@model _23DH110152_Shopbanacc.Models.Product
<head>
    <style>
        img {
            height: 250px;
            max-width: 250px;
        }
    </style>
</head>
<div class="container-fluid">
    <div class="dl-horizontal">
        <div class="col-md-4 ">
            <img src="@Html.DisplayFor(model => model.ProductImage)" />
        </div>
        <div class="col-md-9">
            <dl>
                <dt>Tên sản phẩm</dt>

                <dd>@Html.DisplayFor(model => model.ProductName)</dd>

                <dt>Mô tả</dt>

                <dd>@Html.DisplayFor(model => model.ProductDescription)</dd>

                <dt>Đơn giá</dt>

                <dd>@Html.DisplayFor(model => model.ProductPrice) </dd>

                <dt>Danh mục </dt>

                <dd>
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
            </dl>
        </div>
        
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-3 col-md-9">
        @Html.ActionLink("Xóa", "Delete", new { id = Model.ProductID }, new { @class = "btn btn-primary btn-sm" })
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary btn-sm" })
    </div>
</div>